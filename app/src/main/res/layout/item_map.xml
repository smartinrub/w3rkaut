<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_view_map_fragment_profile_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

        <TextView
            android:id="@+id/text_view_map_fragment_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_map_fragment_profile_pic"
            android:layout_toRightOf="@id/image_view_map_fragment_profile_pic"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_map_fragment_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_view_map_fragment_first_name"
            android:layout_alignStart="@id/text_view_map_fragment_first_name"
            android:layout_below="@id/text_view_map_fragment_first_name"/>

        <TextView
            android:id="@+id/text_view_map_fragment_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            />

    </RelativeLayout>
</LinearLayout>